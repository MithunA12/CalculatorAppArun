<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_primaryContainer"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/b2"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/b5"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/b0"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b1"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/b4"
        app:layout_constraintEnd_toStartOf="@+id/b2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/b0" />

    <Button
        android:id="@+id/b4"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/b7"
        app:layout_constraintEnd_toStartOf="@+id/b5"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/b3" />

    <Button
        android:id="@+id/b5"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/b8"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/b6"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/b9"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b7"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/bDecimal"
        app:layout_constraintEnd_toStartOf="@+id/b8"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/b6" />

    <Button
        android:id="@+id/b8"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/divideButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/b3"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/b6"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bDecimal"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="."
        app:layout_constraintBottom_toTopOf="@+id/SubtractButton"
        app:layout_constraintEnd_toStartOf="@+id/divideButton"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/b9" />

    <Button
        android:id="@+id/b9"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/AddButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SubtractButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:onClick="numSelected"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/multButton"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/AddButton" />

    <Button
        android:id="@+id/multButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:onClick="numSelected"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/buttonMarginBottom"
        android:onClick="numSelected"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/multButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="@dimen/paddingLeft"
        android:text="@string/titleText"
        android:textSize="@dimen/regTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddButton"
        android:layout_width="@dimen/buttonSize"
        android:layout_height="@dimen/buttonSize"
        android:layout_marginStart="16dp"
        android:onClick="numSelected"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/outputTextView"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="@dimen/paddingLeft"
        android:shadowColor="@color/md_theme_dark_inverseOnSurface"
        android:text="Input Here"
        android:textSize="@dimen/regTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clear"
        android:text="@string/clearText"
        app:layout_constraintBottom_toTopOf="@+id/equalsTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/equalsTextView"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginBottom="96dp"
        android:paddingLeft="@dimen/paddingLeft"
        android:text="="
        android:textSize="@dimen/regTextSize"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/outputTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>